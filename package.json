        "eslint-plugin-userscripts": "0.5.6",
        "globals": "16.2.0",
        "jsdoc-api": "9.3.4",
        "prettier": "3.6.2",
        "simple-git": "3.28.0",
        "userscript-meta": "1.0.1"
    }
}
